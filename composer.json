{
    "name": "jeyelscott/my-first-package",
    "description": "This is my first package.",
    "keywords": [
        "jeyelscott",
        "my-first-package"
    ],
    "homepage": "https://github.com/jeyelscott/my-first-package",
    "license": "MIT",
    "authors": [
        {
            "name": "John Leward Escote",
            "email": "zhaile.014@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Jeyelscott\\MyFirstPackage\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jeyelscott\\MyFirstPackage\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
